# N8N Configuration Example
# Copy this file to n8n-config.env and configure values

# =================================
# PROCESSING SETTINGS
# =================================

# Maximum posts in final digest
MAX_POSTS_PER_DIGEST=20

# Minimum text length for post to be considered
MIN_POST_LENGTH=50

# Minimum views for post to be included  
MIN_VIEWS_THRESHOLD=100

# Collection time window in hours
COLLECTION_HOURS=24

# Enable debug logging
DEBUG_MODE=false

# =================================
# AI PROCESSING (Stage 3)
# =================================

# Enable AI processing pipeline
ENABLE_AI_PROCESSING=true

# AI quality threshold (0.0 - 1.0)
QUALITY_THRESHOLD=0.6

# Similarity threshold for duplicate detection
SIMILARITY_THRESHOLD=0.8

# AI Provider (openai, anthropic, local)
AI_PROVIDER=openai

# AI Model name
AI_MODEL=gpt-4o-mini

# OpenAI API Key (copy from main .env file)
# OPENAI_API_KEY=your_openai_key_here

# Maximum summary length in characters
SUMMARY_MAX_LENGTH=150

# =================================
# BACKEND INTEGRATION
# =================================

# Backend API URL
BACKEND_API_URL=http://localhost:8000

# Enable actual saving to backend (false = logging only)
ENABLE_BACKEND_SAVE=false

# API timeout in seconds
BACKEND_API_TIMEOUT=30

# =================================
# N8N SYSTEM SETTINGS
# =================================

# Workflow execution timeout
N8N_WORKFLOW_TIMEOUT=300

# Maximum parallel AI requests
MAX_PARALLEL_AI_REQUESTS=5

# Enable result caching
ENABLE_CACHING=true

# Cache duration in minutes
CACHE_DURATION=60

# =================================
# DEVELOPMENT SETTINGS
# =================================

# Mock AI responses (for testing)
MOCK_AI_RESPONSES=true

# Detailed logging
VERBOSE_LOGGING=false

# Skip API calls (offline mode)
OFFLINE_MODE=false 